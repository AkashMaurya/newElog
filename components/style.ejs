<style>
    :root {
        --color-flickr-pink: #F72585;
        --color-byzantine: #B5179E;
        --color-purple: #7209B7;
        --color-purple-1: #560BAD;
        --color-trypan-blue-1: #480CA8;
        --color-Trypan-Blue: #3A0CA3;
        --color-persian-blue: #3F37C9;
        --color-ultra-marine-blue: #4361EE;
        --color-dodger-blue: #4895EF;
        --color-Vivid-Sky-Blue: #4CC9F0;
        /* --color-backgroud-color:#4361ee; */
        --nav-color-background-color: linear-gradient(#4361EE, #3F37C9);
        --body-background: #FBFCFF;
        --font-style: 'Noto Sans', sans-serif;



    }


    @keyframes buttonColorAnimation {
        from {
            background: var(--color-ultra-marine-blue)
        }

        to {
            background: var(--color-purple);
        }
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;

        text-decoration: none;
        list-style-type: none;
    }

    body {
        width: 100%;
        height: 100vh;
        font-family: var(--font-style);
    }

    #nav {
        background: linear-gradient(#4361EE, #3F37C9);
        width: 100%;
        height: 80px;
    }

    label.logo {
        color: #fff;
        font-size: 35px;
        line-height: 80px;
        font-weight: bold;
        padding: 0 100px;
        cursor: pointer;

    }

    nav ul {
        float: right;
        margin-right: 20px;
    }

    nav ul li {
        display: inline-block;
        line-height: 80px;
        margin: 5px;
    }

    nav ul li a {

        color: #fff;
        font-size: 17px;
        text-transform: uppercase;
        padding: 7px 13px;
        transition: 800ms;

    }

    a.active,
    a:hover {
        background:#7209B7;
        border-radius: 5px;
        transition: .6s;
        transform: translateY(-5px);
    }

    .checkBtn {
        color: #fff;
        float: right;
        font-size: 30px;
        line-height: 80px;
        margin-right: 60px;
        cursor: pointer;
    }

    #btn{
        background-color: #480CA8;
        border:none;
        border-radius: 10px;
  
    }
     #btn:hover{
        background-color: #1a0350;
        border:none;
        border-radius: 10px;
     
        cursor: pointer;
       
    }

    #check,
    .checkBtn {
        display: none;

    }

    @media (max-width:960px) {
        label.logo {
            font-size: 30px;
            padding-left: 60px;
        }

        nav ul li a {
            font-size: 15px;
        }
    }

    @media (max-width:850px) {
        .checkBtn {
            display: block;
        }

        nav ul {
            position: fixed;
            width: 100%;
            height: 100vh;
            background-color: #480CA8;
            top: 80px;
            left: -100%;
            text-align: center;
            transition: all 0.6s;
        }

        nav ul li {
            display: block;
        }

        nav ul li a {
            font-size: 20px;
            color: #FBFCFF
        }

        a.active,
        a:hover {
            background: none;
            color: var(--color-flickr-pink);
            transition: 0.6s;
        }

        #check:checked~ul {
            left: 0;
        }

        /* mobile and tablet device menu code ends here*/



        /* navbar code ends from here */
    }
</style>