<style>
    :root {
        --color-flickr-pink: #F72585;
        --color-byzantine: #B5179E;
        --color-purple: #7209B7;
        --color-purple-1: #560BAD;
        --color-trypan-blue-1: #480CA8;
        --color-Trypan-Blue: #3A0CA3;
        --color-persian-blue: #3F37C9;
        --color-ultra-marine-blue: #4361EE;
        --color-dodger-blue: #4895EF;
        --color-Vivid-Sky-Blue: #4CC9F0;
        /* --color-backgroud-color:#4361ee; */
        --nav-color-background-color: linear-gradient(#4361EE, #3F37C9);
        --body-background: #FBFCFF;
        --font-style: 'Noto Sans', sans-serif;



    }


    @keyframes buttonColorAnimation {
        from {
            background: var(--color-ultra-marine-blue)
        }

        to {
            background: var(--color-purple);
        }
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: 0;
        font-family: var(--font-style);

    }

    body {
        background: var(--body-background);
    }

    /* navbar code start from here */
    nav {
        display: flex;
        justify-content: space-between;
        padding: 15px;
        background: var(--nav-color-background-color);
        color: white;
        align-items: center;

    }

    #logo {
        font-size: 1.5em;
    }

    #menus {
        display: flex;
        list-style-type: none;
        gap: 15px;
        align-items: center;
    }

    #logo,
    .menu-item {
        cursor: pointer;
    }


    .menu-item {
        transition: 800ms;
    }

    .menu-item:hover {
        transform: translateY(-5px);
        color: var(--body-background) cursor: pointer;
    }

    #btn {
        padding: 5px 10px;
        font-size: 1em;
        border: none;
        border-radius: 5px;
        transition: 800ms;
    }

    #btn:hover {
        background-color: #3A0CA3;
        transform: translateY(-5px);
        background-color: val(--nav-color-background-color);
        color: white;
        cursor: pointer;
    }


    /* mobile and tablet device menu  code starts here*/

    #mob-menus {
        text-align: center;
        background-color: var(--color-byzantine);
    }

    .mob-menu-item {
        padding: 20px 0;
        font-size: 1.2em;
        cursor: pointer;
        background: plum;
        border: 0.9px solid plum;
        display: none;
    }

    #mob-btn {

        font-size: 1em;
        padding: 8px 15px;
        background-color: #3A0CA3;
        color: white;
        border: none;
        border-radius: 5px;
    }
    #open-menu {
        display: none;
    }

    #close-menu {
        display: none;
    }

    @media screen and (max-width: 836px) {
        .menu-item {
            display: none;
        }

        #open-menu {
            display: inline;

        }



